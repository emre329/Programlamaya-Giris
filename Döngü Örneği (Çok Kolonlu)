li = []  #kolonlarda kullanılacak rakamları kaydedeceğimiz listeleri oluşturuyoruz.
lk = []
lj = []
lh = []
lb = []

for i in range(1,100):    # 15 katları olan sayıları bulup listeye ekliyoruz
    if i % 15 == 0:
        li.append(i)

for k in range(1,31):     5 in katları olan sayıları başka bir listeye ekliyoruz
    if k % 5 == 0:
        lk.append(k)

for j in reversed(range(50,101)):     #100 ile 50 arasındaki 10 nun katlarını başka bir listeye ekliyoruz.
    if j % 10 == 0:
        lj.append(j)

for h in range(1,7):                  # 2 nin 64 e kadar olan kuvvetlerini bir listeye ekliyoruz.
    lh.append(2**h)

lb.append(li)
lb.append(lk)
lb.append(lj)
lb.append(lh)                          # tüm listeleri büyük bir listede birleştriyoruz.


for b in range(0,6):
    print("1. kolon : {}     2. kolon : {}     3. kolon : {}     4. kolon : {}".format(lb[0][b],lb[1][b],lb[2][b],lb[3][b]))


#ekrana yazdırmak için kolon numaralarını kendimizin girdiği for döngümüzü kuruyoruz.
